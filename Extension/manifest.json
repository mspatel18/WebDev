{
    "manifest_version": 3,
    "name": "Youtube Video to MP3 Downloader",
    "description": "Extension to download mp3 file from youtube",
    "version": "1.0",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "permissions": ["activeTab","tabs","contextMenus"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ]
  }
  