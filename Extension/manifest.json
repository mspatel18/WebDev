{
    "manifest_version": 3,
    "name": "My Extension",
    "description": "A simple extension that stores selected text from the browser",
    "version": "1.0",
    "action": {
        "default_icon": "icon.jpg",
        "default_popup": "popup.html"
        },
    "permissions": ["activeTab", "storage", "tabs"]
  }
  