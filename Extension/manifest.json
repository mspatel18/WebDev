{
    "manifest_version": 3,
    "name": "YT Video to MP3 downloader",
    "description": "Extenstion to download mp3 file from youtube",
    "version": "0.0.0.1",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "permissions": ["activeTab", "storage", "tabs","contextMenus"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ]
  }
  